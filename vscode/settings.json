{
  // editor
  "editor.formatOnType": true,
  "editor.inlineSuggest.enabled": true,

  // terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.tabs.enabled": true,
  "terminal.external.linuxExec": "/usr/bin/zsh",
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",

  // todo tree
  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.general.tags": [
    "XXX",
    "TODO",
    "HACK",
    "FIXME",
    "BUG",
    "FIX"
  ],

  // better comments
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "fixme",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  
  // copilot
  "github.copilot.autocomplete.enable": true,
  "github.copilot.autocomplete.count": 5,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "python": true
  },

  // remote
  "remote.SSH.remotePlatform": {
    "chameleon-ec2": "linux",
    "shandygaff-cloud9": "linux",
    "shandygaff_cloud9": "linux",
    "share-times-ec2": "linux",
    "shandygaff": "linux"
  },
  "remote.restoreForwardedPorts": false,
  "remote.autoForwardPorts": false,
  "remote.downloadExtensionsLocally": true,
  "remote.extensionKind": {
    "pub.name": [
      "ui"
    ]
  },
  "remote.WSL.fileWatcher.polling": true,
  "remote.SSH.useLocalServer": false,

  // C language
  "C_Cpp.intelliSenseEngine": "Tag Parser", //コード補完の設定
  "clang-format.executable": "/usr/bin/clang-format",

  // python
  "python.formatting.provider": "black",
  "python.analysis.completeFunctionParens": true,
  "python.analysis.typeCheckingMode": "basic",
  "pylance.insidersChannel": "daily",  
  "python.envFile": "${workspaceFolder}/.venv",
  "python.terminal.activateEnvInCurrentTerminal": true,
  
  "python.linting.enabled": true,
  "[python]": {
    "editor.defaultFormatter": null,
    "gitlens.codeLens.symbolScopes": [
      "!Module"
    ],
    "editor.wordBasedSuggestions": false
  },
  "python.formatting.autopep8Args": [
    "--ignore",
    "E402"
  ],

  // fonts
  "editor.fontFamily": "monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "HackGenNerd",

  // workbench
  "workbench.colorTheme": "Default Dark+",
  "workbench.activityBar.visible": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editorAssociations": {
    "*.md": "vscode.markdown.preview.editor",
    "*.ipynb": "jupyter-notebook",
    "*.pdf": "default",
    "*.docx": "default",
    "*.h5": "default"
  },

  // explorer  
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,

  // misc  
  "database-client.defaultSelectLimit": 500,
  "extensions.autoCheckUpdates": true,
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "django-html",
    "xml",
    "vue"
  ],
}